{%- from "./../../node_modules/@netbek/periodic-table/macros/legend.njk" import legend %}
{%- from "./../../node_modules/@netbek/periodic-table/macros/table-18.njk" import table %}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <title>periodic-table-demo</title>
    <link rel="stylesheet" href="../node_modules/normalize-css/normalize.css"/>
    <link rel="stylesheet" href="css/styles.min.css"/>
  </head>
  <body>
    <main>
      <div class="constraint constraint--content">
        <header>
          <h1>Periodic Table of Elements</h1>
        </header>

        {{ legend(elements, categories, {
          atomicNumber: 'Atomic number',
          symbol: 'Symbol',
          name: 'Name',
          atomicMass: 'Atomic mass',
          electronegativity: 'Electronegativity'
        }) }}
      </div>

      <div class="constraint constraint--periodic-table">
        {{ table(elements, groups) }}
      </div>
    </main>
  </body>
</html>
